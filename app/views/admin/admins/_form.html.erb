<%=  form_for([:admin, @admin], :html => {:class => 'form-horizontal'}) do |f| %>
<% if @admin.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@admin.errors.count, "error") %> A empechÃ© cet enregistrement :</h2>

  <ul>
    <% @admin.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :login, "Login", :class => "col-sm-4 control-label" %>
  <div class="col-sm-6">
    <%= f.text_field :login, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, "Mot de Passe", :class => "col-sm-4 control-label" %>
  <div class="col-sm-6">
    <%= f.password_field :password, :class => "form-control"%>
  </div>
</div>
<div class="form-group">
  <%= f.label :statut, "Statut", :class => "col-sm-4 control-label" %>
  <div class="col-sm-6">
    <%= f.select( :statut, "<option value='0' selected='selected'>Validateur</option><option value='1'>Admin Tech</option>".html_safe,{include_blank: ""}, {required: 'true', autofocus: 'true', class: 'form-control'}) %>
  </div>
</div>
<div class="boutons">
  <%= f.submit "envoyer", :class => "btn btn-primary" %>
</div>
<% end %>
