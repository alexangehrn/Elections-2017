<div class="panel panel-default formulaire">
  <div class="panel-heading">
    Espace de connexion
  </div>
  <div class="panel-body">
    <%= form_tag sessions_path, :class => "form-horizontal" do %>
    <div class="form-group">
      <%= label_tag "Nom",nil, :class => "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= text_field_tag :name, nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag "Code Confidentiel",nil, :class => "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= password_field_tag :encrypted_code, nil, :class => "form-control"%>
      </div>
    </div>
    <p id="note"> Vous trouverez votre code confidentiel dans la lettre que l'Etat vous a envoy√©</p>
    <div class="boutons">
      <%= submit_tag "Se connecter", :class => "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
